[bandit]
# Bandit configuration file for GitHub Advanced Security
# Fallback INI format configuration (YAML is preferred)

# Exclude directories from security scans
exclude_dirs = tests,venv,.venv,env,.env,__pycache__,custom_stubs,node_modules,build,dist,docs,docs_source,junit,bin,dev_tools,scripts,tool_templates,mock_mcp,mock_crewai,mock_mem0,.github/scripts,ui/react_frontend/node_modules,.git

# Skip specific test IDs that are false positives or acceptable risks
# B101: Use of assert detected (common in tests)
# B102: exec used (acceptable in specific contexts)
# B103: set bad file permissions (handled by deployment)
# B311: Standard pseudo-random generators (acceptable for non-crypto use)
# B404: import subprocess (necessary for system operations)
# B603: subprocess without shell (safer than shell=True)
# B607: starting a process with a partial executable path
# B608: possible SQL injection (handled by ORM)
# B609: use of wildcard in file permissions (deployment specific)
skips = B101,B102,B103,B311,B404,B603,B607,B608,B609

# Set the severity level for GitHub Advanced Security
# Options: 1=LOW, 2=MEDIUM, 3=HIGH
severity = 2

# Set the confidence level for GitHub Advanced Security
# Options: 1=LOW, 2=MEDIUM, 3=HIGH
confidence = 2