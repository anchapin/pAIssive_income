[bandit]
# Bandit configuration file for GitHub Advanced Security

# Exclude directories from security scans
exclude_dirs = tests,venv,.venv,env,.env,__pycache__,custom_stubs,node_modules,build,dist

# Skip specific test IDs
# B101: Use of assert detected
# B311: Standard pseudo-random generators are not suitable for security/cryptographic purposes
# B404: Consider possible security implications associated with the subprocess module
# B603: subprocess call - check for execution of untrusted input
skips = B101,B311,B404,B603

# Set the output format for GitHub Advanced Security
output_format = sarif

# Set the output file for GitHub Advanced Security
output_file = security-reports/bandit-results.sarif

# Set the severity level for GitHub Advanced Security
# Options: low, medium, high
severity_level = medium

# Set the confidence level for GitHub Advanced Security
# Options: low, medium, high
confidence_level = medium