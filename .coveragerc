[run]
source = .
omit =
    tests/*
    .venv/*
    venv/*
    env/*
    .env/*
    __pycache__/*
    */migrations/*
    manage.py
    setup.py
    conftest.py
    */conftest.py
    mock_modules/*
    node_modules/*
    ui/react_frontend/*
    .github/*
    scripts/*
branch = True

[report]
exclude_lines =
    # Skip any line with a pragma
    pragma: no cover
    # Skip representation methods
    def __repr__
    # Skip defensive assertion code
    raise NotImplementedError
    if self.debug:
    # Skip abstract methods
    @abstractmethod
    # Skip pass statements
    pass
    # Skip type checking blocks
    if TYPE_CHECKING:
    # Skip exception handling that can't be tested easily
    except ImportError:
    raise ImportError
    # Skip main execution blocks
    if __name__ == .__main__.:
    # Skip debug code
    if DEBUG:
    # Skip logging setup
    logging.basicConfig
fail_under = 15
